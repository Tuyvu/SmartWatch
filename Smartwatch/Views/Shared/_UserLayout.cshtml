<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smartwatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Smartwatch.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserLayout/css/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/UserLayout/css/StyleSheet.css">
    <link rel="stylesheet" href="~/UserLayout/css/main.css">

</head>
<body>
    <header class="app-header">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="navbar-menu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link nav-hover" asp-controller="User" asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-hover">
                            Product
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-hover" asp-controller="User" asp-action="About">
                            About
                        </a>
                    </li>

                </ul>
            </div>
            <div class="navbar-menu_tog">
                <ul class="navbar-nav">
                    <li class="nav-item d-lg-none" id="menu-toggle">
                        <a class="nav-link nav-hover">
                            <i class="ti-menu"></i>
                        </a>
                    </li>
                    <li class="nav-item d-lg-none" id="close-toggle" style="display:none">
                        <a class="nav-link nav-hover">
                            <i class="ti-close"></i>
                        </a>
                    </li>

                </ul>
            </div>

            <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                    <li class="nav-item d-flex">
                        <button type="button" class="btn btn-outline-primary"
                                style="border-bottom-right-radius: 0;border-top-right-radius: 0;">
                            <span class="material-symbols-outlined">
                                search
                            </span>
                        </button>
                        <input class="form-control" type="text" placeholder="Search..."
                               style="border-bottom-left-radius: 0;border-top-left-radius: 0;" />
                    </li>
                    <li class="nav-item d-flex">
                        <a class="nav-link nav-hover" href="javascript:void(0)">
                            <i class="ti-shopping-cart"></i>
                            <div class="notification bg-primary rounded-circle"></div>
                        </a>
                    </li>
                    <li class="nav-item d-flex">
                        <a class="nav-link nav-hover" href="javascript:void(0)">
                            <i class="ti-user"></i>
                            <div class="notification bg-primary rounded-circle"></div>
                        </a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--  Footer Begin -->
    <footer class="app-footer" style="padding: 20px;">
        <div class="row">
            <div class="col-6 col-md-2 mb-3">
                <h5><i class="ti-time">  SmartWatch</i></h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">About</a></li>
                </ul>
            </div>
            <div class="col-6 col-md-2 mb-3">
                <h5>Section</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a asp-controller="User" asp-action="Index" class="nav-link p-0 text-muted">Home</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Product</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Procedure</a></li>
                    <li class="nav-item mb-2"><a asp-controller="User" asp-action="About" class="nav-link p-0 text-muted">About</a></li>
                </ul>
            </div>
            <div class="col-6 col-md-2 mb-3">
                <h5>Thông tin liên hệ</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="https://www.google.com/maps/place/105.7980394,17z/data=!3m1!4b1!4m6!3m5!1s0x3135ab41597c05ed:0xb7f47f7b74c2a9f0!8m2!3d21.0299163!4d105.8006197!16s%2Fg%2F11gd39rcqb?hl=vi-VN&entry=ttu" class="nav-link p-0 text-muted"><i class="ti-map-alt">  497 Nguyễn Khang</i></a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted"><i class="ti-headphone">  0928334955-0345965445</i></a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted"><i class="ti-email"> SmartWatch497@gamil.com</i></a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted"><i class="ti-facebook"> SmartWatch</i></a></li>
                </ul>
            </div>

            <div class="col-md-5 offset-md-1 mb-3">
                <form>
                    <h5>Subscribe to our newsletter</h5>
                    <p>Monthly digest of what's new and exciting from us.</p>
                    <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                        <label for="newsletter1" class="visually-hidden">Email address</label>
                        <input id="newsletter1" type="text" class="form-control" placeholder="Email address">
                        <button class="btn btn-primary" type="button">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="d-flex flex-column flex-sm-row justify-content-between py-4 my-4 border-top " style="padding: 50px">
            <p>© 2022 Company, Inc. All rights reserved.</p>
            <ul class="list-unstyled d-flex">
                <li class="ms-3"><a class="link-drak" href="https://www.facebook.com/"><svg class="bi" width="24" height="24"> <i class="ti-facebook"></i></svg></a></li>
                <li class="ms-3"><a class="link-drak" href="https://www.instagram.com/accounts/login/"><svg class="bi" width="24" height="24"> <i class="ti-instagram"></i></svg></a></li>
                <li class="ms-3"><a class="link-drak" href="https://twitter.com/i/flow/login?input_flow_data=%7B%22requested_variant%22%3A%22eyJsYW5nIjoidmkifQ%3D%3D%22%7D"><svg class="bi" width="24" height="24"> <i class="ti-twitter"></i></svg></a></li>
            </ul>
        </div>
    </footer>
    <!--  Footer End -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.getElementById('menu-toggle');
            const navbarNav = document.querySelector('.navbar-menu');


            menuToggle.addEventListener('click', function () {
                navbarNav.classList.toggle('show');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>